{{!< default}}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
<header class="main-header blog {{#if cover_image}}cover" style="background-image: url({{cover_image}}){{else}}no-cover{{/if}}">
  <nav class="site-width">
    {{#if @blog.logo}}<a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
    <h1 class="blog-title">{{name}}</h1>
    {{#if bio}}<h3 class="blog-description">{{bio}}</h3>{{/if}}
    {{#if location}}<div class="author-location">{{location}}</div>{{/if}}
    {{#if website}}<div class="author-link"><a href="{{website}}">{{website}}</a></div>{{/if}}
  </nav>
</header>
{{/author}}

{{! The main content area on the homepage }}
<main class="content" role="main">
  {{! The tag below includes the post loop - partials/loop.hbs }}
  {{> "loop"}}
</main>
