<header class="blogpost cover" style="background-image: url({{img_url}})">
  <nav>
    <ul>
      <li>
        {{#if author.profile_image}}<img src="{{author.profile_image}}" alt="Author image" />{{/if}}
        <span>{{author}}</span>
      </li>
    </ul>
    <ul>
      <li><a href="{{@blog.url}}"><strong>{{@blog.title}}</strong></a></li>
    </ul>
  </nav>

  <div>
    <nav class="site-width">
      <h1>{{{title}}}</h1>
      <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time>
    </nav>
  </div>
</header>
