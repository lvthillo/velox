{{!< default}}

{{#post}}

{{#if feature_image}}
{{> "header-post-cover"}}
{{else}}
{{> "header-blog-post"}}
{{/if}}

<main>
  <article class="{{post_class}} site-width">
    {{#unless feature_image}}
    <header>
      <h1 class="post-title">{{title}}</h1>
      <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time>
    </header>
    {{/unless}}

    <div>
      {{content}}
    </div>

    {{#author}}
    <footer>
      {{#if feature_image}}
      <figure class="desktop">
        <img src="{{img_url}}" alt="Author image" />
      </figure>
      {{/if}}

      <div>
        <div><a href="{{url}}"><strong>{{name}}</strong></a></div>
        {{#if bio}}<p>{{bio}}</p>{{/if}}
      </div>
    </footer>
    {{/author}}
  </article>
  {{> loaders/load-disqus-comment}}
</main>

<aside class="site-width">
  <h6>Read more</h6>
  {{#next_post}}
  <a class="{{#if feature_image}}cover" style="background-image: url({{img_url}}){{else}}no-cover{{/if}}" href="{{url}}">
    <section class="post">
      <h5>{{title}}</h5>
      <p>{{excerpt words="19"}}&hellip;</p>
    </section>
  </a>
  {{/next_post}}
  {{#prev_post}}
  <a class="right {{#if feature_image}}cover" style="background-image: url({{img_url}}){{else}}no-cover{{/if}}" href="{{url}}">
    <section class="post">
      <h5>{{title}}</h5>
      <p>{{excerpt words="19"}}&hellip;</p>
    </section>
  </a>
  {{/prev_post}}
</aside>

{{!
